{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: arm-none-eabi-g++ build active file",
            "command": "/usr/bin/arm-none-eabi-g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j"
            ],
        },
        {
            "label": "Clean",
            "detail": "Deletes all build artifacts.",
            "type": "shell",
            "command": "make",
            "args": [
                "clean",
            ],
        },
        {
            "label": "Start QEMU",
            "detail": "Starts the built binary in a QEMU instance that waits for a gdb connection to begin execution.",
            "dependsOn": [
                "Build",
            ],
            "type": "shell",
            "command": "make",
            "args": [
                "test_run",
            ],
            "isBackground": true,
        },
        {
            "label": "Start QEMU Test",
            "type": "shell",
            "command": "qemu-system-gnuarmeclipse",
            "args": [
                "-serial", "null",
                "-serial", "null",
                "-serial", "stdio",
                "-gdb", "tcp::63770,server",
                "-machine", "STM32F4-Discovery",
                "-cpu", "cortex-m4",
                "-kernel", "build/startup.bin",
                "-S",
                "&",
            ],
            "isBackground": true,
        },
    ],
    "version": "2.0.0"
}